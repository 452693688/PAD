<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <android.support.v7.widget.CardView
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="登录"
                android:textColor="#4BD5D5"
                android:textSize="17sp"
                />

            <EditText
                android:id="@+id/login_account_et"
                style="@style/LoginET"
                android:layout_marginTop="25dp"
                android:elevation="3dp"
                android:hint="请输入用户名"
                />

            <EditText
                android:id="@+id/login_password_et"
                style="@style/LoginET"
                android:layout_marginTop="20dp"
                android:digits="@string/password_input"
                android:elevation="3dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:id="@+id/login_password_save_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="记住密码"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/login_password_forget_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="忘记密码?"
                    android:textColor="#CC8E83"
                    android:textSize="14sp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/login_in_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_btn_bg"
                android:elevation="3dp"
                android:gravity="center"
                android:text="登　录"
                android:textColor="#ffffff"
                android:textSize="16sp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
